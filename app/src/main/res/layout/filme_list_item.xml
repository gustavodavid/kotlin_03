<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="6dp"
                                    android:visibility="visible"
                                    android:id="@+id/filme_list_item_card_view"
                                    app:contentPadding="4dp"
                                    app:cardUseCompatPadding="true"
                                    app:layout_insetEdge="none">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="265dp" tools:srcCompat="@drawable/procurando"
                android:id="@+id/filme_list_item_poster"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:adjustViewBounds="false" android:cropToPadding="false"
                android:scaleType="centerCrop"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/filme_list_item_titulo" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/filme_list_item_poster"
                app:layout_constraintStart_toStartOf="@+id/filme_list_item_poster"
                app:layout_constraintEnd_toEndOf="@+id/filme_list_item_poster"
                android:textSize="24sp" android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/filme_list_item_data_lancamento"
                app:layout_constraintTop_toBottomOf="@+id/filme_list_item_titulo"
                app:layout_constraintStart_toStartOf="@+id/filme_list_item_titulo"
                app:layout_constraintEnd_toEndOf="@+id/filme_list_item_titulo" android:textSize="14sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/filme_list_item_duracao"
                app:layout_constraintStart_toStartOf="@+id/filme_list_item_data_lancamento"
                app:layout_constraintEnd_toEndOf="@+id/filme_list_item_data_lancamento" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/filme_list_item_data_lancamento"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:textSize="14sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>